<html metal:use-macro="load: master.pt">

<div metal:fill-slot="top_section">
  <b>Edit a Book</b>
</div>

<div metal:fill-slot="main_section">
  <form action="${save_url}" method="post">
    <label>ISBN
      <input name="isbn13" type="text" value="${book.isbn13}" autofocus="autofocus" />
    </label>
    
    <label>Title
      <input name="title" type="text" value="${book.title}" />
    </label>
    
    <label>Author
      <input name="author_string" type="text" value="${book.author_string()}" />
    </label>
    
    <label>Publisher
      <input name="publisher" list="publishers" value="${book.publisher}" />
    </label>
    <datalist id="publishers">
      <option tal:repeat="pub publishers" value="${pub}" />
    </datalist>
    
    <label>Binding
      <input name="binding" list="bindings" value="${book.binding}" />
    </label>
    <datalist id="binding">
      <option tal:repeat="bind bindings" value="${bind}" />
    </datalist>
    
    <label>Location
      <input name="shelf_location" list="locations" value="${book.shelf_location}" />
    </label>
    <datalist id="locations">
      <option tal:repeat="loc locations" value="${loc}" />
    </datalist>
    
    <input type="submit" name="form.submitted" value="Save" />
  </form>
</div>

</html>
