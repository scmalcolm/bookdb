<html metal:use-macro="load: master.pt">

<div metal:fill-slot="top_section">
  <b>Edit an Order</b>
</div>

<div metal:fill-slot="main_section">
  <div class="order-header">
  <form action="${save_url}" method="post">
    <label>PO
      <input name="po" type="text" value="" autofocus="autofocus" />
    </label>

    <label>Distributor
      <input name="distributor" list="dist" value="" />
    </label>
    <datalist id="dist">
      <option tal:repeat="distributor distributors" value="${distributor}" />
    </datalist>
    
    <label>Shipping Method
      <input name="shipping_method" list="ship" value="" />
    </label>
    <datalist id="ship">
      <option tal:repeat="method shipping_methods" value="${method}" />
    </datalist>

    <label>Date
      <input name="order_date" type="date" value="" />
    </label>

    <label>Special Instructions
      <input name="comment" type="text" value="" />
    </label>

    <input name="form.submitted" type="submit" method="save" value="Save" />
  </form>
  </div>
</div>

</html>
